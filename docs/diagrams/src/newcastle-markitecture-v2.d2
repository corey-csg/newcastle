# ===== CONNECTIONS (clean, no labels) =====
inputs.payer-rules -> newcastle: {
  style.stroke: "#999999"
  style.stroke-width: 2
}

inputs.standards -> newcastle: {
  style.stroke: "#999999"
  style.stroke-width: 2
}

inputs.intel -> newcastle: {
  style.stroke: "#999999"
  style.stroke-width: 2
}

newcastle -> outputs.users: {
  style.stroke: "#00AEEF"
  style.stroke-width: 2
}

newcastle -> outputs.channels: {
  style.stroke: "#00AEEF"
  style.stroke-width: 2
}

